<Window x:Class="EquipmentGeneratorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentGeneratorWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="ForestGreen">
    <Grid>
        <ListBox x:Name="ItemList" Margin="10,10,677,217"/>
        <Button x:Name="AddButton" Content="Add Item" HorizontalAlignment="Left" Margin="10,274,0,0" VerticalAlignment="Top" Height="46" Width="113" Click="ItemAdd"/>
        <Button x:Name="DeleteButton" Content="Delete Item" HorizontalAlignment="Left" Margin="10,325,0,0" VerticalAlignment="Top" Height="47" Width="113" Click="Delete"/>
        <Button x:Name="UpdateButton" Content="Update Item" HorizontalAlignment="Left" Margin="10,377,0,0" VerticalAlignment="Top" Height="47" Width="113" Click="Update"/>
        <TextBox x:Name="ItemName" TextWrapping="Wrap" Margin="10,222,677,165"/>


    </Grid>
</Window>
